#include "ap.h"
#include "lcd/st7735.h"




void apInit(void)
{
	//uartOpen(_DEF_UART1, 57600);
	  cliOpen(_DEF_UART1, 57600);

	  st7735Init();
	  gpioPinWrite(1, _DEF_HIGH);

}

void apMain(void)
{
  uint32_t pre_time;

  pre_time = millis();
  while(1)
  {
    if (millis()-pre_time >= 500)
    {
      pre_time = millis();
      ledToggle(_DEF_LED1);
    }

    /*// CDC TEST
    if(uartAvailable(_DEF_UART1) > 0)
    {
    	uartPrintf(_DEF_UART1, "Rx 0x%X\n",uartRead(_DEF_UART1));
    }
    */

    cliMain();
  }
}
